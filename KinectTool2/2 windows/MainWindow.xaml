    <Window x:Class="_2_windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Closing="Window_Closing">
    <Grid>
        <Button Content="Show" Height="23" HorizontalAlignment="Left" Margin="228,26,0,0" Name="button1" VerticalAlignment="Top" Width="75" Click="button1_Click" />
        <Button Content="Hide" Height="23" HorizontalAlignment="Left" Margin="103,89,0,0" Name="button2" VerticalAlignment="Top" Width="75" Click="button2_Click" />
        <Slider Name="slider1" Value="{Binding Mode=TwoWay, Path=ElevationAngle}" BorderBrush="Red" Foreground="Black" Height="150" HorizontalAlignment="Left" Interval="1" Margin="333,141,0,0" Maximum="27" Minimum="-27" Orientation="Vertical" VerticalAlignment="Top" Width="25" MouseRightButtonDown="slider1_MouseRightButtonDown" />
        <TextBlock Name="textBlock5" Height="23" HorizontalAlignment="Left" Margin="364,204,0,0" Text="Elevation Angle" VerticalAlignment="Top" Width="118" />
    </Grid>
</Window>
